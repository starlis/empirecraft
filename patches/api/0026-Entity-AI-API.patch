 public interface EAPI_Entity {
 
@@ -93,4 +99,38 @@ public interface EAPI_Entity {
 
     @NotNull
     <T extends Entity> EntityTask<T> scheduleTask(@NotNull T entity, int interval, @NotNull EntityTask<T> task);
